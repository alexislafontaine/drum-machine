pipeline{
    agent any
    tools {
        nodejs 'nodeJS11'
    }
    stages{
        stage("Build"){
            steps{
                sh 'npm install'
                sh 'npm run-script build'
                stash includes: 'public/**/*', name: 'build'
            }
        }
        stage("Test"){
            steps{
                unstash 'build'
                sh 'npm run-script test'
                junit 'tests-results**/*.xml'
            }
        }
    }
    post{
        success{
            archiveArtifacts 'public/**/*'
        }
    }
}